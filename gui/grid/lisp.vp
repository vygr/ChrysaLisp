(include 'sys/func.inc)
(include 'gui/grid/class.inc)
(include 'class/lisp/class.inc)

(def-method 'grid :lisp_create)
	;inputs
	;r0 = lisp object (ptr)
	;r1 = args list object (ptr)
	;outputs
	;r0 = lisp object (ptr)
	;r1 = return value object (ptr)
	;trashes
	;r1-r14

	(entry 'grid :lisp_create '(r0 r1))

(errorcases
	(assign '((r1 array_length)) '(r2))
	(gotoif '(r2 /= 0) 'error))

	(vp-push r0)
	(call 'grid :create nil '(r1))
	(vp-pop r0)

	(exit 'grid :lisp_create '(r0 r1))
	(vp-ret)

(errorcases
(vp-label 'error)
	(jump 'lisp :repl_error '(r0 "(create-grid)" error_msg_wrong_num_of_args r1)))

(def-func-end)
