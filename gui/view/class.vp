(def-method 'view 'get_first)
	;inputs
	;r0 = view object (ptr)
	;outputs
	;r0 = view object (ptr)
	;r1 = 0 if empty, else first child view object (ptr)
	;trashes
	;r2

	(lh-get-head r0 view_list r1)
	(ln-get-succ r1 0 r2)
	(vpif '(r2 == 0))
		(vp-cpy-rr r2 r1)
	(else)
		(vp-sub-cr view_node r1)
	(endif)
	(vp-ret)

(def-func-end)

(def-method 'view 'get_last)
	;inputs
	;r0 = view object (ptr)
	;outputs
	;r0 = view object (ptr)
	;r1 = 0 if empty, else last child view object (ptr)
	;trashes
	;r2

	(lh-get-tail r0 view_list r1)
	(ln-get-pred r1 0 r2)
	(vpif '(r2 == 0))
		(vp-cpy-rr r2 r1)
	(else)
		(vp-sub-cr view_node r1)
	(endif)
	(vp-ret)

(def-func-end)

(def-method 'view 'get_relative)
	;inputs
	;r0 = view object (ptr)
	;r1 = ancestor view object (ptr)
	;r7 = view x (pixels)
	;r8 = view y (pixels)
	;outputs
	;r7 = relative x (pixels)
	;r8 = relative y (pixels)
	;trashes
	;r2, r9-r10

	;walk up tree to parent
	(vp-cpy-rr r0 r2)
	(loop-while '(r2 != r1))
		(vp-cpy-ir-i r2 view_x r9)
		(vp-cpy-ir-i r2 view_y r10)
		(vp-add-rr r9 r7)
		(vp-add-rr r10 r8)
		(vp-cpy-ir r2 hmap_parent r2)
		(assert '(r2 != 0))
	(loop-end)
	(vp-ret)

(def-func-end)

(def-method 'view 'hit)
	;inputs
	;r0 = view object (ptr)
	;r7 = x (pixels)
	;r8 = y (pixels)
	;outputs
	;r0 = view object (ptr)
	;r1 = 0 if not, else hit

	(vpif '(r7 >= 0))
		(vpif '(r8 >= 0))
			(vp-cpy-ir-i r0 view_w r1)
			(vpif '(r7 < r1))
				(vp-cpy-ir-i r0 view_h r1)
				(vpif '(r8 < r1))
					;hit ?
					(vp-cpy-ir-ui r0 view_flags r1)
					(vp-and-cr view_flag_solid r1)
					(vp-ret)
				(endif)
			(endif)
		(endif)
	(endif)
	(vp-xor-rr r1 r1)
	(vp-ret)

(def-func-end)

(def-method 'view 'hit_tree)
	;inputs
	;r0 = view object (ptr)
	;r7 = x (pixels)
	;r8 = y (pixels)
	;outputs
	;r0 = view object (ptr)
	;r1 = 0 if not hit, else hit view object (ptr)
	;r7 = x relative to hit (pixels)
	;r8 = y relative to hit (pixels)
	;trashes
	;r1-r3

	(def-struct 'local)
		(ptr 'this)
		(ptr 'hit)
	(def-struct-end)

	;save inputs
	(vp-alloc local_size)
	(vp-cpy-ri r0 rsp local_this)
	(vp-xor-rr r1 r1)
	(vp-cpy-ri r1 rsp local_hit)

	;iterate through views front to back
	(call 'view 'forward_tree '(r0 rsp ($ hit_down_callback) ($ hit_up_callback)))

	(vp-cpy-ir rsp local_this r0)
	(vp-cpy-ir rsp local_hit r1)
	(vp-free local_size)
	(vp-ret)

(vp-label 'hit_down_callback)
	(vp-cpy-ir-i r0 view_x r1)
	(vp-sub-rr r1 r7)
	(vp-cpy-ir-i r0 view_y r1)
	(vp-sub-rr r1 r8)
	(d-jump 'view 'hit '(r0 r7 r8))

(vp-label 'hit_up_callback)
	(vp-cpy-rr r1 r2)
	(vp-cpy-ir r1 local_hit r1)
	(vpif '(r1 == 0))
		(call 'view 'hit '(r0 r7 r8) '(r0 r1))
		(vpif '(r1 != 0))
			(vp-cpy-ri r0 r2 local_hit)
			(vp-ret)
		(endif)
		(vp-cpy-ir-i r0 view_x r1)
		(vp-add-rr r1 r7)
		(vp-cpy-ir-i r0 view_y r1)
		(vp-add-rr r1 r8)
		(vp-xor-rr r1 r1)
	(endif)
	(vp-ret)

(def-func-end)

(def-method 'view 'opaque)
	;inputs
	;r0 = view object (ptr)
	;trashes
	;all but r0

	;remove any opaque region
	(vp-push r0)
	(vp-lea-i r0 view_opaque_region r1)
	(f-bind 'gui 'statics r0)
	(vp-add-cr gui_statics_rect_heap r0)
	(call 'region 'free '(r0 r1))
	(vp-pop r0)

	;paste opaque region
	(jump 'view 'add_opaque '(r0 0 0 (r0 view_w i) (r0 view_h i)))

(def-func-end)

(def-method 'view 'pref_size)
	;inputs
	;r0 = view object (ptr)
	;outputs
	;r9 = preferred width (pixels)
	;r10 = preferred height (pixels)
	;trashes
	;all but r0

	(ptr 'this)
	(uint 'mw 'mh)

	(push-scope)
	(entry 'view 'pref_size {this})

	(call 'view 'get_long_prop {this, prop_min_width} {_, mw})
	(call 'view 'get_long_prop {this, prop_min_height} {_, mh})

	(exit 'view 'pref_size {this, mw, mh})
	(pop-scope)
	(return)

(def-func-end)

(def-method 'view 'set_bounds)
	;inputs
	;r0 = view object (ptr)
	;r7 = x (pixels)
	;r8 = y (pixels)
	;r9 = width (pixels)
	;r10 = height (pixels)

	(vp-cpy-ri-i r7 r0 view_x)
	(vp-cpy-ri-i r8 r0 view_y)
	(vp-cpy-ri-i r9 r0 view_w)
	(vp-cpy-ri-i r10 r0 view_h)
	(vp-ret)

(def-func-end)

(def-method 'view 'sub)
	;inputs
	;r0 = view object (ptr)
	;trashes
	;r1-r2

	;test parent
	(vp-cpy-ir r0 hmap_parent r1)
	(vpif '(r1 != 0))
		;clear parent field
		(vp-xor-rr r2 r2)
		(vp-cpy-ri r2 r0 hmap_parent)

		;remove from parent list
		(vp-lea-i r0 view_node r2)
		(ln-remove-node r2 r1)
	(endif)
	(vp-ret)

(def-func-end)

(def-method 'view 'sub_opaque)
	;inputs
	;r0 = view object (ptr)
	;r7 = x (pixels)
	;r8 = y (pixels)
	;r9 = width (pixels)
	;r10 = height (pixels)
	;trashes
	;all but r0

	;cut opaque region
	(vp-push r0)
	(vp-add-rr r7 r9)
	(vp-add-rr r8 r10)
	(vp-lea-i r0 view_opaque_region r1)
	(f-bind 'gui 'statics r0)
	(vp-add-cr gui_statics_rect_heap r0)
	(call 'region 'remove_rect '(r0 r1 r7 r8 r9 r10))
	(vp-pop r0)
	(vp-ret)

(def-func-end)

(def-method 'view 'to_front)
	;inputs
	;r0 = view object (ptr)
	;outputs
	;r0 = view object (ptr)
	;trashes
	;all but r0

	;are we already front ?
	(ln-is-first r0 view_node r1)
	(vpif '(r1 != 0))
		(vp-push r0)
		(call 'view 'add_front '((r0 hmap_parent) r0))
		(vp-pop r0)
		(jump 'view 'dirty_all '(r0))
	(endif)
	(vp-ret)

(def-func-end)
