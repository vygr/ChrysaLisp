		;across to sibling
		(ln-get-succ r0 view_node r1)
		(vp-sub-cr view_node r1)

		(ln-get-succ r1 view_node r2)
		(gotoif '(r2 != 0) 'down_loop_ctx)

		;up to parent
		(vp-cpy-ir r0 hmap_parent r0)
	(loop-end)

	(vp-free local_size)
	(vp-ret)

(def-func-end)

