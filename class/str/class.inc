(defun roundup (_)
	(setq _ (dec _))
	(setq _ (logior _ (>> _ 32)))
	(setq _ (logior _ (>> _ 16)))
	(setq _ (logior _ (>> _ 8)))
	(setq _ (logior _ (>> _ 4)))
	(setq _ (logior _ (>> _ 2)))
	(setq _ (logior _ (>> _ 1)))
	(inc _))

