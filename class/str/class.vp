	(call 'sys_mem 'alloc '((& r1 (add str_size byte_size))) '(r0 _))
	(vpif '(r0 != 0))
		;init the object
		(call 'str 'init2 `(r0 (@ ,(f-path 'str 'vtable)) r5 (r6 stat_fsize)) '(r0 r1))
		(vpif '(r1 == 0))
			;error with init
