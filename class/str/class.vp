(def-method 'str 'hash)
	;inputs
	;r0 = str object (ptr)
	;outputs
	;r0 = str object (ptr)
	;r1 = hash code (ulong)
	;trashes
	;r2-r4

	(entry 'str 'hash '(r0))

	(vp-cpy-ir-ui r0 str_hashcode r1)
	(vpif '(r1 == 0))
		(vp-cpy-ir-ui r0 str_length r4)
		(vp-lea-i r0 str_data r3)
		(vp-add-rr r3 r4)
		(vp-xor-rr r1 r1)
		(vpif '(r3 != r4))
			(loop-start)
				(vp-cpy-ir-ub r3 0 r2)
				(vp-add-cr byte_size r3)
				(vp-add-rr r2 r1)
				(vp-cpy-rr r1 r2)
				(vp-shl-cr 10 r1)
				(vp-add-rr r1 r2)
				(vp-cpy-rr r2 r1)
				(vp-shr-cr 6 r2)
				(vp-xor-rr r2 r1)
			(loop-until '(r3 == r4))
		(endif)
		(vp-cpy-rr r1 r2)
		(vp-shl-cr 3 r1)
		(vp-add-rr r1 r2)
		(vp-cpy-rr r2 r1)
		(vp-shr-cr 11 r2)
		(vp-xor-rr r1 r2)
		(vp-cpy-rr r2 r1)
		(vp-shl-cr 15 r2)
		(vp-add-rr r2 r1)
		(vp-cpy-cr 0xffffffff r2)
		(vp-and-rr r2 r1)
		(vp-cpy-ri-i r1 r0 str_hashcode)
	(endif)

	(exit 'str 'hash '(r0 r1))
	(vp-ret)

(def-func-end)

