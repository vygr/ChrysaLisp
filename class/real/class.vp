	;:r0 = real object (ptr)
	;outputs
	;:r0 = real object (ptr)
	;:r1 = result real object (ptr)
	;trashes
	;:r1-:r14

	(mathop :sign
		'(progn
			(vp-cpy-cr (n2r 0) :r0)
			(vp-cpy-rf :r0 :f0)
			(vpif '(:f1 < :f0))
				(vp-cpy-cr (n2r -1) :r0)
				(vp-cpy-rf :r0 :f0)
			(elseif '(:f1 > :f0))
				(vp-cpy-cr (n2r 1) :r0)
				(vp-cpy-rf :r0 :f0)
			(endif)))

(def-func-end)
