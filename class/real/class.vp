(def-method 'real :frac)
	;inputs
	;:r0 = real object (ptr)
	;outputs
	;:r0 = real object (ptr)
	;:r1 = result real object (ptr)
	;trashes
	;:r1-:r14, :f0-:f1

	(mathop :frac
		'(progn
			(vp-cpy-ff :f1 :f0)		; f0 = x
			(vp-cvt-fr :f0 :r0)		; r0 = (int)x (Truncate)
			(vp-cvt-rf :r0 :f1)		; f1 = (double)(int)x
			(vp-sub-ff :f1 :f0)		; f0 = x - trunc(x)
			(vp-xor-rr :r0 :r0)		; r0 = 0
			(vp-cvt-rf :r0 :f1)		; f1 = 0.0
			(vpif '(:f0 < :f1))		; if f0 < 0
				(vp-cpy-cr 1 :r0)	; r0 = 1
				(vp-cvt-rf :r0 :f1)	; f1 = 1.0
				(vp-add-ff :f1 :f0)	; f0 += 1.0 (Correction for negative numbers)
			(endif)))

(def-func-end)

(def-method 'real :floor)
	;inputs
	;:r0 = real object (ptr)
	;outputs
	;:r0 = real object (ptr)
	;:r1 = result real object (ptr)
	;trashes
	;:r1-:r14, :f0-:f1

	(mathop :floor
		'(progn
			(vp-cvt-fr :f1 :r0)		; r0 = (int)x
			(vp-cvt-rf :r0 :f0)		; f0 = (double)(int)x (f0 now holds Truncated value)
			(vpif '(:f0 > :f1))		; if trunc > x
				(vp-cpy-cr 1 :r0)
				(vp-cvt-rf :r0 :f1)	; f1 = 1.0 (Reuse f1 for constant)
				(vp-sub-ff :f1 :f0)	; f0 = f0 - 1.0
			(endif)))

(def-func-end)

(def-method 'real :ceil)
	;inputs
	;:r0 = real object (ptr)
	;outputs
	;:r0 = real object (ptr)
	;:r1 = result real object (ptr)
	;trashes
	;:r1-:r14, :f0-:f1

	(mathop :ceil
