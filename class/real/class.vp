(def-method 'real :mod)
	;inputs
	;:r0 = real object (ptr)
	;:r1 = list of real objects (ptr)
	;outputs
	;:r0 = real object (ptr)
	;:r1 = 0 if error, else result real object (ptr)
	;trashes
	;:r1-:r14, :f0-:f3

	(divop :mod
		'(progn
			(vp-cpy-ff :f0 :f2)		; Copy dividend (x)
			(vp-div-ff :f1 :f2)		; f2 = x / y
			(vp-cvt-fr :f2 :r0)		; r0 = (int)(x / y) [Truncate]
			(vp-cvt-rf :r0 :f2)		; f2 = (double)(int)(x / y)
			(vp-mul-ff :f1 :f2)		; f2 = y * trunc(x / y)
			(vp-sub-ff :f2 :f0)))	; f0 = x - (y * trunc(x / y))

(def-func-end)

(redefun compare (_ p)
	(entry 'real _ '(:r0 :r1))
	(vp-push :r0)
	(class/array/get_both :r1 :r1 :r2)
	(vp-cpy-ir :r1 0 :r0)
	(vp-add-cr +ptr_size :r1)
	(assign '((:r0 num_value)) '(:f0))
	(loop-start)
		(vp-cpy-ir :r1 0 :r3)
		(vp-add-cr +ptr_size :r1)
		(assign '((:r3 num_value)) '(:f1))
		(exec p)
	(loop-until '(:r1 = :r2))
	(vp-pop :r0)
	(exit 'real _ '(:r0 -1))
	(vp-ret)
(vp-label 'fail)
	(vp-pop :r0)
	(exit 'real _ '(:r0 0))
	(vp-ret))

