(redefun divop (_ p)
	(entry 'real _ '(:r0 :r1))
	(vp-push :r0)
	(class/array/get_both :r1 :r1 :r4)
	(vp-cpy-ir :r1 0 :r0)
	(vp-add-cr +ptr_size :r1)
	(assign '((:r0 num_value) 0) '(:f0 :r3))
	(vp-cpy-rf :r3 :f3)
	(loop-start)
		(vp-cpy-ir :r1 0 :r5)
		(vp-add-cr +ptr_size :r1)
		(assign '((:r5 num_value)) '(:f1))
	(errorcase
		(gotoif '(:f1 = :f3) 'error))
		(exec p)
	(loop-until '(:r1 = :r4))
	(v-call 'num :vcreate '(:f0) '(:r1) :r5 :r1)
	(vp-pop :r0)
	(exit 'real _ '(:r0 :r1))
	(vp-ret)
(vp-label 'error)
	(vp-pop :r0)
	(exit 'real _ '(:r0 :r14))
	(vp-ret))

