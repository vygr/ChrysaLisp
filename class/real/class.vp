(redefun compare (_ p)
	(entry 'real _ '(:r0 :r1))
	(vp-push :r0)
	(class/array/get_both :r1 :r1 :r2)
	(vp-cpy-ir :r1 0 :r0)
	(vp-add-cr +ptr_size :r1)
	(assign '((:r0 num_value)) '(:f0))
	(loop-start)
		(vp-cpy-ir :r1 0 :r3)
		(vp-add-cr +ptr_size :r1)
		(assign '((:r3 num_value)) '(:f1))
		(exec p)
	(loop-until '(:r1 = :r2))
	(vp-pop :r0)
	(exit 'real _ '(:r0 -1))
	(vp-ret)
(vp-label 'fail)
	(vp-pop :r0)
	(exit 'real _ '(:r0 0))
	(vp-ret))

