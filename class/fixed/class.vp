(def-method 'fixed 'mod)
	;inputs
	;r0 = fixed object (ptr)
	;r1 = args vector object (ptr)
	;outputs
	;r0 = fixed object (ptr)
	;r1 = 0, else return value object (ptr)
	;trashes
	;r1-r14

	(entry 'fixed 'mod '(r0 r1))

	(vp-push r0)
	(class/array/get_both r1 r4 r5)
	(vp-cpy-ir r4 0 r0)
	(vp-add-cr ptr_size r4)
	(assign '((r0 num_value)) '(r0))
	(loop-start)
		(vp-cpy-ir r4 0 r6)
		(vp-add-cr ptr_size r4)
		(assign '((r6 num_value)) '(r1))
	(errorcases
		(gotoif '(r1 = 0) 'error))
