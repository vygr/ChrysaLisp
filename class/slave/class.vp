(import 'sys/func.inc)
(import 'class/vector/class.inc)
(import 'class/msg_out/class.inc)
(import 'class/msg_in/class.inc)
(import 'class/string/class.inc)
(import 'class/slave/class.inc)

(gen-new 'slave)
(gen-create 'slave)
(gen-class 'slave)

(def-method 'slave 'init)
	;inputs
	;r0 = slave object (ptr)
	;r1 = vtable (pptr)
	;outputs
	;r1 = 0 if error, else ok
	;trashes
	;all but r0

	(ptr 'this 'stream 'msg 'data)
	(union
		'(ptr 'vtable)
		'(ulong 'ok))

	;read init args
	(push-scope)
	(entry 'slave 'init {this, vtable})

	;init parent
	(s-call 'slave 'init {this, vtable} {_, ok})
	(vpif {ok})
		;init myself
		(call 'sys_mail 'mymail nil {msg, data})
		(vpif {msg->msg_length})
			;create stdin, stdout, stderr
			(call 'msg_in 'create nil {this->slave_stdin})
			(call 'msg_out 'create {data->slave_msg_init_stdout_id.id_id} {this->slave_stdout})
			(call 'msg_out 'create {data->slave_msg_init_stderr_id.id_id} {this->slave_stderr})

			;create args
			(call 'stream 'create {0, 0, &data->slave_msg_init_args, msg->msg_length - slave_msg_init_size} {stream})
			(call 'stream 'split {stream, char_space} {_, this->slave_args})
			(call 'stream 'deref {stream})

			;send back ack with stdin mailbox
			(assign {data->slave_msg_init_ack_id.id_id} {msg->msg_dest.id_id})
			(assign {this->slave_stdin->msg_in_mbox_id} {data->slave_msg_init_stdin_mbox_id})
			(call 'sys_mail 'send {msg})
		(else)
			;abort
			(call 'sys_mail 'free {msg})
			(assign {0} {ok})
		(endif)
	(endif)

	(exit 'slave 'init {this, ok})
	(pop-scope)
	(return)

(def-func-end)

(def-method 'slave 'deinit)
	;inputs
	;r0 = slave object (ptr)
	;trashes
	;all but r0

	(ptr 'this)

	(push-scope)
	(entry 'slave 'deinit {this})

	;flush remaining
	(call 'msg_out 'write_flush {this->slave_stderr})
	(call 'msg_out 'write_flush {this->slave_stdout})

	;send stopping on stdout
	(call 'msg_out 'set_state {this->slave_stdout, stream_mail_state_stopping})
	(call 'msg_out 'write_next {this->slave_stdout})
	(call 'msg_out 'write_flush {this->slave_stdout})

	;wait for stopped
	(loop-while {this->slave_stdin->msg_in_state != stream_mail_state_stopped})
		(call 'msg_in 'next_msg {this->slave_stdin})
	(loop-end)

	;send stopped on stdout and stderr
	(call 'msg_out 'set_state {this->slave_stdout, stream_mail_state_stopped})
	(call 'msg_out 'set_state {this->slave_stderr, stream_mail_state_stopped})
	(call 'msg_out 'write_next {this->slave_stdout})
	(call 'msg_out 'write_flush {this->slave_stdout})
	(call 'msg_out 'write_next {this->slave_stderr})
	(call 'msg_out 'write_flush {this->slave_stderr})

	;free stdin, stdout and stderr
	(call 'msg_in 'deref {this->slave_stdin})
	(call 'msg_out 'deref {this->slave_stdout})
	(call 'msg_out 'deref {this->slave_stderr})

	;free args
	(call 'vector 'deref {this->slave_args})

	;deinit parent
	(exit 'slave 'deinit {this})
	(pop-scope)
	(s-jmp 'slave 'deinit '(r0))

(def-func-end)
