(def-method :sys_mail :lisp_validate)
	;inputs
	;:r0 = lisp object (ptr)
	;:r1 = args list object (ptr)
	;outputs
	;:r0 = lisp object (ptr)
	;:r1 = return value object (ptr)
	;trashes
	;:r1-:r14

	(entry :sys_mail :lisp_validate '(:r0 :r1))

	(errorif-lisp-args-sig 'error :r1 1)

	(vp-push :r0)
	(list-bind-args :r1 '(:r0) '(:obj))
	(vp-cpy-ir :r0 str_data :r0)
	(call :sys_mail :validate '(:r0) '(:r0))
	(assign '((:rsp 0)) '(:r1))
	(vpif '(:r0 /= 0))
		(assign '((:r1 lisp_sym_t)) '(:r1))
	(else)
		(assign '((:r1 lisp_sym_nil)) '(:r1))
	(endif)
	(class/obj/ref :r1 :r2)
	(vp-pop :r0)

	(exit :sys_mail :lisp_validate '(:r0 :r1))
	(vp-ret)

(errorcase
(vp-label 'error)
	(jump :lisp :repl_error '(:r0 "(mail-validate mbox)" +error_msg_wrong_types :r1))
	(signature '(:str)))

(def-func-end)

(def-method :sys_mail :lisp_read)
	;inputs
	;:r0 = lisp object (ptr)
	;:r1 = args list object (ptr)
	;outputs
	;:r0 = lisp object (ptr)
	;:r1 = return value object (ptr)
	;trashes
	;:r1-:r14

	(vp-rdef (this args msg mbox))

	(entry :sys_mail :lisp_read `(,this ,args))

	(errorif-lisp-args-sig 'error :r1 1)

	(vp-push this)
	(list-bind-args args `(,mbox) '(:obj))
	(vp-cpy-ir mbox str_data mbox)
	(call :sys_mail :validate `(,mbox) `(,mbox))
	(vpif `(,mbox /= 0))
		(call :sys_mail :read `(,mbox) `(,msg _))
		(gotoif `(,msg = 0) 'invalid)
		(call :sys_mail :free_obj `(,msg) `(,args _ _))
	(else)
	(vp-label 'invalid)
		(assign '((:rsp 0)) `(,this))
		(assign `((,this lisp_sym_nil)) `(,args))
		(class/obj/ref args msg)
	(endif)
	(vp-pop this)

	(exit :sys_mail :lisp_read `(,this ,args))
	(vp-ret)

(errorcase
(vp-label 'error)
	(jump :lisp :repl_error `(,this "(mail-read mbox)" +error_msg_wrong_types ,args))
	(signature '(:str)))

(def-func-end)

