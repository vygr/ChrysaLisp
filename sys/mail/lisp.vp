(def-method :sys_mail :lisp_send)
	;inputs
	;:r0 = lisp object (ptr)
	;:r1 = args list object (ptr)
	;outputs
	;:r0 = lisp object (ptr)
	;:r1 = return value object (ptr)
	;trashes
	;:r1-:r14

	(vp-rdef (this mbox data msg args) '(:r11 :r12 :r13))

	(entry :sys_mail :lisp_send `(,this ,args))

	(errorif-lisp-args-sig 'error :r1 2)

	(list-bind-args args `(,mbox ,data) '(:obj :obj))
	(call :sys_mail :alloc_obj `(,data (& ,data str_data) (,data str_length)) `(,msg))
	(assign-net-id mbox str_data msg msg_dest)
	(call :sys_mail :send `(,msg))
	(call :obj :ref `(,data) `(,args))

	(exit :sys_mail :lisp_send `(,this ,args))
	(vp-ret)

(errorcase
(vp-label 'error)
	(jump :lisp :repl_error `(,this "(mail-send mbox str)" +error_msg_wrong_types ,args))
	(signature '(:str :str)))

(def-func-end)

