(def-method :host_os :pii_write_num)
	;inputs
	;:r0 = fd (long)
	;:r1 = number (long)
	;:r2 = base (long)
	;outputs
	;:r0 = error code (long)
	;trashes
	;:r0

	(entry :host_os :pii_write_num '(:r0 :r1 :r2))
	(abi-push-trashed :r1 :r2 :r3 :r4)
	(vp-cpy-rr :r2 :r3)
	(vp-swp-rr :r0 :r1)
	(vp-cpy-rr :rsp :r4)    ;stack location
	(loop-start)
		(vp-xor-rr :r2 :r2)
		(vp-div-rrr-u :r3 :r2 :r0)
		(vp-push :r2)
	(loop-until '(:r0 = 0))
	(loop-start)
		(vp-pop :r0)
		(vp-add-cr (code "0") :r0)
		(vpif '(:r0 > (code "9")))
			(vp-add-cr (- (code "A") (code ":")) :r0)
		(endif)
		(vp-push :r1)
		(vp-cpy-rr :r0 :r2)
		(call :host_os :pii_write_char '(:r1 :r2) '(_))
		(vp-pop :r1)
	(loop-until '(:rsp = :r4))
	(abi-pop-trashed :r1 :r2 :r3 :r4)
	(vp-ret)

(def-func-end)

