(defun emit-cpy-rd-i (r s1 s2)
	(defq s1l (logand 7 s1) s1h (>> s1 3)
		s2l (logand 7 s2) s2h (>> s2 3)
		rl (logand 7 r) rh (>> r 3))
	(if (or (>= s1 8) (>= s2 8) (>= r 8)) (emit-byte (+ 0x40 (<< rh 2) (<< s2h 1) s1h)))
	(emit-byte 0x89)
	(cond
		((and (/= s1 5) (/= s1 13))
			(emit-byte (+ 0x04 (<< rl 3)) (+ (<< s2l 3) s1l)))
		(t  (emit-byte (+ 0x44 (<< rl 3)) (+ (<< s2l 3) s1l) 0))))

(defun emit-add-cr (c r)
	(unless (= c 0)
		(defq rl (logand 7 r) rh (>> r 3))
		(emit-byte (+ 0x48 rh))
		(cond
			((= 1 c)
				(emit-byte 0xff (+ 0xc0 rl)))
			((<= -0x80 c 0x7f)
				(emit-byte 0x83 (+ 0xc0 rl) c))
			((<= -0x80000000 c 0x7fffffff)
				(if (= r 0)
					(emit-byte 0x05)
					(emit-byte 0x81 (+ 0xc0 rl)))
				(emit-int c))
			(t (throw "emit-add-cr constant out of range !" c)))))

(defun emit-sub-cr (c r)
	(unless (= c 0)
		(defq rl (logand 7 r) rh (>> r 3))
		(emit-byte (+ 0x48 rh))
		(cond
			((= 1 c)
				(emit-byte 0xff (+ 0xc8 rl)))
			((<= -0x80 c 0x7f)
				(emit-byte 0x83 (+ 0xe8 rl) c))
			((<= -0x80000000 c 0x7fffffff)
				(if (= r 0)
					(emit-byte 0x2d)
					(emit-byte 0x81 (+ 0xe8 rl)))
				(emit-int c))
			(t (throw "emit-sub-cr constant out of range !" c)))))

(defun emit-and-cr (c r)
	(unless (= c -1)
		(if (= c 0)
			(emit-xor-rr r r)
			(progn
				(defq rl (logand 7 r) rh (>> r 3))
				(emit-byte (+ 0x48 rh))
				(cond
					((<= -0x80 c 0x7f)
						(emit-byte 0x83 (+ 0xe0 rl) c))
					((<= -0x80000000 c 0x7fffffff)
						(if (= r 0)
							(emit-byte 0x25)
							(emit-byte 0x81 (+ 0xe0 rl)))
						(emit-int c))
					(t (throw "emit-and-cr constant out of range !" c)))))))

(defun emit-xor-cr (c r)
	(unless (= c 0)
		(defq rl (logand 7 r) rh (>> r 3))
		(emit-byte (+ 0x48 rh))
		(cond
			((<= -0x80 c 0x7f)
				(emit-byte 0x83 (+ 0xf0 rl) c))
			((<= -0x80000000 c 0x7fffffff)
				(if (= r 0)
					(emit-byte 0x35)
					(emit-byte 0x81 (+ 0xf0 rl)))
				(emit-int c))
			(t (throw "emit-xor-cr constant out of range !" c)))))

(defun emit-lnot-rr (r d)
	(if (>= d 4)
		(throw "emit-lnot-rr illegal register !" d))
	(emit-cpy-rr d r)
	(emit-xor-rr d d)
	(emit-cmp-cr 0 r)
	(emit-byte 0x0f 0x94 (+ 0xc0 d)))

(defun emit-land-rr (s d)
	(if (or (>= s 4) (>= d 4))
		(throw "emit-land-rr illegal register !" (list s d)))
	(emit-cmp-cr 0 d)
	(emit-byte 0x0f 0x95 (+ 0xc0 d))
	(emit-cmp-cr 0 s)
	(emit-byte 0x0f 0x95 (+ 0xc0 s))
	(emit-and-rr s d))

(defun emit-shl-cr (c r) (emit-shift-cr 0xe0 c r))
(defun emit-shl-rr (s d) (emit-shift-rr 0xe0 s d))
(defun emit-shr-cr (c r) (emit-shift-cr 0xe8 c r))
(defun emit-shr-rr (s d) (emit-shift-rr 0xe8 s d))
(defun emit-asr-cr (c r) (emit-shift-cr 0xf8 c r))
(defun emit-asr-rr (s d) (emit-shift-rr 0xf8 s d))

(defun emit-mul-cr (c r)
	(if (= c 0)
		(emit-xor-rr r r)
		(progn
			(defq rl (logand r 7) rh (>> r 3))
			(cond
				((= 1 c))
				((= -1 c)
					(emit-byte (+ 0x48 rh) 0xf7 (+ 0xd8 rl)))
				((<= -0x80 c 0x7f)
					(emit-byte (+ 0x48 (<< rh 2) rh) 0x6b (+ 0xc0 rl (<< rl 3)) c))
				((<= -0x80000000 c 0x7fffffff)
					(emit-byte (+ 0x48 (<< rh 2) rh) 0x69 (+ 0xc0 rl (<< rl 3)))
					(emit-int c))
				(t (throw "emit-mul-cr constant out of range !" c))))))

(defun emit-mul-rr (s d)
	(defq sl (logand 7 s) sh (>> s 3)
		dl (logand 7 d) dh (>> d 3))
	(emit-byte (+ 0x48 (<< dh 2) sh) 0x0f 0xaf (+ 0xc0 (<< dl 3) sl)))

(defun emit-swp-rr (s d)
	(unless (eql s d)
		(if (eql s 0) (setq s d d 0))
		(defq sl (logand 7 s) sh (>> s 3) dl (logand 7 d) dh (>> d 3))
		(if (= d 0)
			(emit-byte (+ 0x48 sh) (+ 0x90 sl))
			(emit-byte (+ 0x48 (<< sh 2) dh) 0x87 (+ 0xc0 (<< sl 3) dl)))))

(defun emit-ext-rr (s d)
	(cond
		((and (eql s 0) (eql d 2))
			(emit-byte 0x48 0x99))
		((eql s d)
			(emit-asr-cr 63 d))
		(t  (emit-cpy-rr s d)
			(emit-asr-cr 63 d))))

(defun emit-div-rrr (s d1 d2)
	(cond
		((and (eql d1 2) (eql d2 0))
			(defq sl (logand 7 s) sh (>> s 3))
			(emit-byte (+ 0x48 sh) 0xF7 (+ 0xF8 sl)))
		((and (eql d1 0) (eql d2 2) (not (eql s 0)) (not (eql s 2)))
			(defq sl (logand 7 s) sh (>> s 3))
			(emit-byte 0x48 0x92 (+ 0x48 sh) 0xF7 (+ 0xF8 sl) 0x48 0x92))
		(t  (emit-push d2 d1 s (const (native-reg? :r2)) (const (native-reg? :r1)) (const (native-reg? :r0)))
			(emit-cpy-ir (const (native-reg? :rsp)) 24 (const (native-reg? :r1)))
			(emit-cpy-ir (const (native-reg? :rsp)) 32 (const (native-reg? :r2)))
			(emit-cpy-ir (const (native-reg? :rsp)) 40 (const (native-reg? :r0)))
			(emit-byte 0x48 0xF7 0xF9)
			(emit-cpy-ri (const (native-reg? :r2)) (const (native-reg? :rsp)) 32)
			(emit-cpy-ri (const (native-reg? :r0)) (const (native-reg? :rsp)) 40)
			(emit-pop d2 d1 s (const (native-reg? :r2)) (const (native-reg? :r1)) (const (native-reg? :r0))))))

(defun emit-div-rrr-u (s d1 d2)
	(cond
		((and (eql d1 2) (eql d2 0))
			(defq sl (logand 7 s) sh (>> s 3))
			(emit-byte (+ 0x48 sh) 0xF7 (+ 0xF0 sl)))
		((and (eql d1 0) (eql d2 2) (not (eql s 0)) (not (eql s 2)))
			(defq sl (logand 7 s) sh (>> s 3))
			(emit-byte 0x48 0x92 (+ 0x48 sh) 0xF7 (+ 0xF0 sl) 0x48 0x92))
		(t  (emit-push d2 d1 s (const (native-reg? :r2)) (const (native-reg? :r1)) (const (native-reg? :r0)))
			(emit-cpy-ir (const (native-reg? :rsp)) 24 (const (native-reg? :r1)))
			(emit-cpy-ir (const (native-reg? :rsp)) 32 (const (native-reg? :r2)))
			(emit-cpy-ir (const (native-reg? :rsp)) 40 (const (native-reg? :r0)))
			(emit-byte 0x48 0xF7 0xF1)
			(emit-cpy-ri (const (native-reg? :r2)) (const (native-reg? :rsp)) 32)
			(emit-cpy-ri (const (native-reg? :r0)) (const (native-reg? :rsp)) 40)
			(emit-pop d2 d1 s (const (native-reg? :r2)) (const (native-reg? :r1)) (const (native-reg? :r0))))))

(defun emit-alloc (c) (emit-sub-cr (align c stack_align) (const (native-reg? :rsp))))
(defun emit-free (c) (emit-add-cr (align c stack_align) (const (native-reg? :rsp))))
(defun emit-ret () (emit-byte 0xc3))
(defun emit-brk (n))

(defun emit-stack-init (s f x)
	(defq tk_state_size (* +ptr_size (length stack_state)))
	(emit-sub-cr (+ tk_state_size (* +ptr_size 2)) s)
	(emit-cpy-ri f s tk_state_size)
	(emit-cpy-ri x s (+ tk_state_size +ptr_size)))

(case *abi*
(AMD64
(defun emit-call-abi (r b c n &rest x)
	(cond
		((= *func_align* 16)
			(apply emit-push x)
			(emit-call-jump-i 0x10 b c)
			(emit-add-cr (* +ptr_size (length x)) (const (native-reg? :rsp))))
		(t  (setq x (cat (list r r) x))
			(emit-cpy-rr (const (native-reg? :rsp)) r)
			(emit-and-cr -16 (const (native-reg? :rsp)))
			(apply emit-push x)
			(emit-call-jump-i 0x10 b c)
			(emit-cpy-ir (const (native-reg? :rsp)) (* +ptr_size (- (length x) 2)) (const (native-reg? :rsp)))))))
(WIN64
(defun emit-call-abi (r b c n &rest x)
	(cond
		((= *func_align* 16)
			(if (odd? (length x))
				(setq x (cat (list r) x)))
			(apply emit-push x)
			(emit-sub-cr 32 (const (native-reg? :rsp)))
			(emit-call-jump-i 0x10 b c)
			(emit-add-cr (* +ptr_size (+ (length x) 4)) (const (native-reg? :rsp))))
		(t  (emit-cpy-rr (const (native-reg? :rsp)) r)
			(emit-and-cr -16 (const (native-reg? :rsp)))
			(if (odd? (length x))
				(defq y (cat (list r) x))
				(defq y (cat (list r r) x)))
			(apply emit-push y)
			(emit-sub-cr 32 (const (native-reg? :rsp)))
			(emit-call-jump-i 0x10 b c)
			(emit-cpy-ir (const (native-reg? :rsp)) (* +ptr_size (+ (length x) 4)) (const (native-reg? :rsp)))))))
(t (throw "Unknown ABI !" *abi*)))
